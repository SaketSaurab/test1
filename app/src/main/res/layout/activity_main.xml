<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#BC1C2B"
    >
    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"

        android:paddingHorizontal="131dp"
        android:paddingTop="92dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/masaischool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masai School is a 21st century coding school that cares about you!"
        android:textSize="15dp"
        android:layout_below="@+id/welcome"
        android:paddingHorizontal="38dp"
        android:textColor="@color/white"
        />
    <ImageView
        android:id="@+id/masaischoolimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/masaischool"
        android:layout_marginHorizontal="78dp"
        android:src="@drawable/schoolicon"
        android:layout_marginTop="31dp"
        />

    <Button
        android:id="@+id/signin"
        android:layout_width="317dp"
        android:layout_height="66dp"
        android:layout_below="@id/masaischoolimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="#C83333"
        />

    <Button
        android:id="@+id/create"
        android:layout_width="317dp"
        android:layout_height="66dp"
        android:text="Create an Account"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="#000000"
        android:textAllCaps="false"
        android:layout_below="@id/signin"  />

















</RelativeLayout>